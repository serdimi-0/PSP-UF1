<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300"
        Background="#282828">
    <StackPanel Margin="20 0 20 0" VerticalAlignment="Center">
        <Label Margin="10" Content="Nom d'usuari:" Foreground="White"/>
        <TextBox x:Name="txbName" Padding="10" Margin="10" Background="#3E3E3E" Foreground="White"/>
        <Button Width="100" Margin="0 10 0 30" Content="Entra" Click="Button_Click"/>
    </StackPanel>
</Window>
